              <i class="fas fa-chevron-down"></i>
            </span>
          </button>
          <button class="button">
            <label class="label-text">More</label>
            <span class="icon">
              <i class="fas fa-chevron-down"></i>
            </span>
          </button>
          <div class="sort">
            <span class="sort-label">Sort by: </span>
            <button class="sort-button">
              <select name="users" id="" class="input-box72">
                <option value="All">All</option>
                <option value="Teachers">Teachers</option>
                <option value="Students">Students</option>
                <option value="Admins">Admins</option>
              </select>
              <span class="icon">
                <i class="fas fa-chevron-down"></i>
              </span>
            </button>
          </div>
          <label for="checkbox_" class="checkbox-wrapper">
            <input class="checkbox" id="checkbox_" type="checkbox" />
            <i class="fas fa-bars"></i>
            <i class="fas fa-ellipsis-h"></i>
            <div class="dot"></div>
          </label>
        </div>
        <div class="user-cards">
          <% allUsers.map(e => { %>
            <div class="user-card">
              <i class="fas fa-ellipsis-v"></i>
              <div class="image-wrapper">
                <img src=<%= e.picUrl %> alt="Image" />
              </div>
              <p class="user-name"><%= e.surname %></p>
              <p class="user-name"><%= e.phone %></p>
              <p class="user-mail"><%= e.name %></p>
              <ul class="progress-status">
                <i class="far fa-clock"></i>
                <li style="--color:#2b51d6;--width:100%"></li>
                <li style="--color:#577bf9;--width:100%"></li>
                <li style="--color:#54b5ff;--width:100%"></li>
                <span>100%</span>
              </ul>
              <p class="user-role"><%= e.activity %></p>
            </div>
          <% }) %>
        </div>
